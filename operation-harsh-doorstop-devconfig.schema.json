{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "array",
    "items": {
        "$ref": "#/definitions/ConfigElement"
    },
    "definitions": {
        "ConfigElement": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "DisplayName": {
                    "type": "string"
                },
                "Category": {
                    "type": "string"
                },
                "Description": {
                    "type": "string"
                },
                "Keywords": {
                    "type": "string"
                },
                "FieldName": {
                    "type": "string"
                },
                "InputType": {
                    "$ref": "#/definitions/InputType"
                },
                "ParamFieldName": {
                    "type": "string"
                },
                "DefaultValue": {
                    "type": "string"
                },
                "EnumValues": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "IncludeInCommandLine": {
                    "type": "boolean"
                },
                "SkipIfEmpty": {
                    "type": "boolean"
                },
                "Placeholder": {
                    "type": [
                        "string"
                    ]
                },
                "Required": {
                    "type": "boolean"
                },
                "MinValue": {
                    "type": "string",
                    "format": "integer"
                },
                "MaxValue": {
                    "type": "string",
                    "format": "integer"
                },
                "ConfigFile": {
                    "type": "string"
                },
                "AutoMap": {
                    "type": "boolean"
                },
                "Importable": {
                    "type": "boolean"
                },
                "ConfigType": {
                    "$ref": "#/definitions/ConfigType"
                },
                "ConfigFormat": {
                    "type": "string"
                },
                "ConfigFormatRegex": {
                    "type": "string"
                },
                "ConfigFileTemplate": {
                    "type": "string"
                },
                "IsFlagArgument": {
                    "type": "boolean"
                },
                "Hidden": {
                    "type": "boolean"
                },
                "Special": {
                    "type": "string"
                },
                "ExcludeFromImport": {
                    "type": "boolean"
                },
                "ConfigEncoding": {
                    "type": "string"
                },
                "Suffix": {
                    "type": "string"
                }
            },
            "required": [
                "DisplayName"
            ],
            "title": "ConfigElement"
        },
        "ConfigType": {
            "type": "string",
            "enum": [
                "ini",
                "template",
                "kvp",
                "json",
                "xml"
            ],
            "title": "ConfigType"
        },
        "InputType": {
            "type": "string",
            "enum": [
                "text",
                "password",
                "number",
                "checkbox",
                "enum",
                "hidden",
                "textarea",
                "list",
                "url"
            ],
            "title": "InputType"
        }
    }
}